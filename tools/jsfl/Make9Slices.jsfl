var doc = fl.getDocumentDOM();var curTimeline = doc.getTimeline();doc.selection = curTimeline.layers[0].frames[0].elements;var curSymbol = curTimeline.libraryItem;if(curSymbol.scalingGrid){	makeSlices(curSymbol);}else{	var res = confirm("Enable 9 slice grid for this symbol?");		if(res){		curSymbol.scalingGrid = true;		makeSlices(curSymbol);	}}function makeSlices(symbol){	doc.breakApart();		var rect = symbol.scalingGridRect;		var offset = 1000;		//top	doc.setSelectionRect({left:rect.left - offset, top:rect.top - offset, right:rect.right + offset, bottom:rect.top});	moveToNewLayer();		//right	doc.setSelectionRect({left:rect.right, top:rect.top - offset, right:rect.right + offset, bottom:rect.bottom + offset});	moveToNewLayer();		//bottom	doc.setSelectionRect({left:rect.left - offset, top:rect.bottom, right:rect.right + offset, bottom:rect.bottom + offset});	moveToNewLayer();		//left	doc.setSelectionRect({left:rect.left - offset, top:rect.top - offset, right:rect.left, bottom:rect.bottom + offset});	moveToNewLayer();	doc.selectNone();}function moveToNewLayer(){	if(doc.getSelectionRect()){		doc.distributeToLayers();	}}